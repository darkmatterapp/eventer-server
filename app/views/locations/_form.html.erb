<%= form_for @location do |f| %>
  <%= render "/shared/form_errors", object: @location %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :venue_id %>
    <%= f.select :venue_id, venue_options_for_select, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", @location %>
    <%= f.submit  class: "btn btn-success btn-lg" %>
  </div>
<% end %>

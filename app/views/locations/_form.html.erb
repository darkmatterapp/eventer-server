<%= form_for [@event, @venue, @location] do |f| %>
  <%= render "/shared/form_errors", resource: @location %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :venue_id %>
    <%= f.select :venue_id, venue_options_for_select(@event), {}, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", [@event, @venue] %>
    <%= f.submit  class: "btn btn-success btn-lg" %>
  </div>
<% end %>

<div class="page-header">
  <h1>Sign Up</h1>
</div>

<%= form_for @user do |f| %>
  <%= render "shared/form_errors", resource: @user %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
  </div>
  <div class="actions">
    <%= link_to "Or sign in instead", signin_path %>
    <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

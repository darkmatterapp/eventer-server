<div class="h-event">
  <div class="page-header">
    <h1>
      <%= link_to_unless_current session.name, [@event, session], class: "p-name" %>
    </h1>

    <% if session.people.present? %>
      <h2>By <%= link_to_people(session.people) %></h2>
    <% end %>

    <p><%= link_to "EDIT", [:edit, @event, session], class: "btn btn-default btn-xs" %></p>
    <p>During <%= link_to @event.name, @event %></p>

    <% if session.location.present? %>
      <p>At <%= link_to session.location.name, [@event, session.location.venue, session.location] %></p>
    <% end %>
  </div>

  <% if session.description.present? %>
    <div class="p-summary p-description">
      <%= simple_format session.description %>
    </div>
  <% end %>

  <p>
    <% if session.starts_at.present? %>
      <%= time_tag session.starts_at, session.starts_at.strftime("%Y-%m-%d %H:%M"), class: "dt-start" %>
    <% end %>

    <% if session.ends_at.present? %>
      &ndash;
      <%= time_tag session.ends_at, session.ends_at.strftime("%Y-%m-%d %H:%M"), class: "dt-end" %>
    <% end %>
  </p>
</div>

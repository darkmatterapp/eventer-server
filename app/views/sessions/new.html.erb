<div class="page-header">
  <h1>Sign In</h1>
</div>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email], autofocus: true, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= link_to "Or sign up instead", signup_path %>
    <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

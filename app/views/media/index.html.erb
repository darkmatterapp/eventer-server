<%= render "/shared/notice" %>
<%= render "/shared/media_header", event: @event, medium: medium_type %>

<div class="page-header">
  <h1><%= medium_type.pluralize %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= link_to medium.name, [@event, medium] %></td>
        <td><%= link_to "EDIT", [:edit, @event, medium], class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<dl>
  <% event.participants.order(:name).each do |participant| %>
    <dt><%= link_to participant.name, [:admin, event, participant] %></dt>

    <% if participant.sessions.present? %>
      <% participant.sessions.each do |session| %>
        <dd><%= link_to "#{session.location.name} / #{session.time_range}", [:admin, event, session] %></dd>
      <% end %>
    <% end %>

  <% end %>
</dl>

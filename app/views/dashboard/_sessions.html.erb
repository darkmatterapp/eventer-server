<dl>
  <% event.sessions.order(:starts_at).each do |session| %>
    <dt><%= link_to session.name, [:admin, event, session] %></dt>

    <% if session.participants.present? %>
      <% session.participants.each do |participant| %>
        <dd><%= link_to participant.name, [:admin, event, participant] %> (<%= participant.role_for(session) %>)</dd>
      <% end %>
    <% end %>

  <% end %>
</dl>

<div id="locations">
  <h2>
    Locations
    <%= link_to "NEW", [:new, event, venue, :location], class: "btn btn-primary btn-xs" %>
  </h2>

  <% if venue.locations.blank? %>
    <p>You haven&rsquo;t added any locations yet.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% venue.locations.each do |location| %>
          <tr>
            <td><%= link_to location.name, [event, venue, location] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

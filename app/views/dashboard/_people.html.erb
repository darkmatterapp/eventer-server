<dl>
  <% event.people.each do |person| %>
    <dt><%= link_to person.name, [event, person] %></dt>

    <% if person.performances.present? %>
      <% person.performances.each do |performance| %>
        <dd><%= link_to performance.name, [event, performance] %></dd>
      <% end %>
    <% end %>

  <% end %>
</dl>

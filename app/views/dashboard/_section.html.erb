<section id="<%= section %>" class="col-xs-12 col-sm-<%= columns %>">
  <div class="page-header">
    <h2><%= link_to section.to_s.pluralize.capitalize,[:admin, event, section], class: "p-name" %></h2>
    <p class="header-button"><%= link_to "NEW", [:new, :admin, event, section.to_s.singularize], class: "btn btn-default btn-xs" %></p>
  </div>

  <% if event.send(section).blank? %>
    <p>You haven&rsquo;t added any <%= section.to_s.pluralize %> yet.</p>
  <% else %>
    <% if %w(photos audios videos).include?(section.to_s) %>
      <%= render "dashboard/media", event: event, section: section %>
    <% else %>
      <%= render "dashboard/#{section}", event: event %>
    <% end %>

    <%= render "dashboard/more_items", event: event, collection: event.send(section), collection_path: [:admin, event, section], limit: 4 %>
  <% end %>
</section>

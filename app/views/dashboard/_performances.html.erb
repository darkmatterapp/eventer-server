<dl>
  <% event.performances.each do |performance| %>
    <dt><%= link_to performance.name, [event, performance] %></dt>

    <% if performance.people.present? %>
      <% performance.people.each do |person| %>
        <dd><%= link_to person.name, [event, person] %></dd>
      <% end %>
    <% end %>

  <% end %>
</dl>

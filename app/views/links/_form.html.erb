<%= form_for [@event, @link] do |f| %>
  <%= render "/shared/form_errors", resource: @link %>

  <div class="form-group">
    <%= f.label :url, "URL" %>
    <%= f.url_field :url, autofocus: true, class: "form-control input-lg" %>
    <p class="help-block">Tweet, blog post, review, etc</p>
  </div>

  <div id="link-meta">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: 10 %>
    </div>

    <%= render "shared/creator_form", f: f %>

    <div class="form-group">
      <%= f.label :published_at, "Original Publish Date" %>
      <%= render "shared/date_select_row", resource: @link, attr: :published_at %>
    </div>
  </div>

  <div class="actions">
    <%= link_to "Cancel", @event %>
    <%= f.submit  class: "btn btn-success btn-lg" %>
  </div>
<% end %>

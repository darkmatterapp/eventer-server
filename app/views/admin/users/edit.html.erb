<div class="page-header">
  <h1>Profile Settings</h1>
</div>

<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/form_errors", resource: @user %>

  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, autofocus: true, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", dashboard_path %>
    <%= f.submit  class: "btn btn-success btn-lg" %>
  </div>
<% end %>

<div class="nested-fields">
  <div class="form-group field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group field">
    <%= f.label :photo %>
    <%= f.url_field :photo, class: "form-control input-lg" %>
  </div>

  <div class="form-group field">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control", rows: 10 %>
  </div>

  <div class="form-group field">
    <%= f.label :url, "URL" %>
    <%= f.url_field :url, class: "form-control input-lg" %>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Social Media Usernames</h3>
    </div>
    <div class="panel-body">Just the username. No @ symbol. No URL.</div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :twitter %>
        <%= f.text_field :twitter, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :instagram %>
        <%= f.text_field :instagram, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :facebook %>
        <%= f.text_field :facebook, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :youtube, "YouTube" %>
        <%= f.text_field :youtube, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :vimeo %>
        <%= f.text_field :vimeo, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="form-group field">
        <%= f.label :bandcamp %>
        <%= f.text_field :bandcamp, class: "form-control" %>
      </div>
    </div>
  </div>
</div>

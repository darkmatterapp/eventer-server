<%= render "/shared/notice" %>

<div class="h-event">
  <div class="page-header">
    <h1>
      <span class="p-name"><%= @event.name %></span>
      <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary btn-sm" %>
    </h1>
  </div>

  <p>
    Time Zone: <%= @event.time_zone %>
  </p>

  <div>
    <% unless @event.performances.blank? %>
      <ol>
        <% @event.performances.each do |performance| %>
          <li><%= link_to performance.name, performance %></li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>